# Database (Turso / LibSQL)
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token

# AI Processing (Anthropic Claude)
ANTHROPIC_API_KEY=sk-ant-api-key-here
# Optional: override model (default: claude-3-5-sonnet-20240620). Check https://docs.anthropic.com/en/api/models
ANTHROPIC_MODEL=claude-3-5-sonnet-20240620

# Vector Store (ChromaDB)
CHROMA_HOST=http://localhost:8000
CHROMA_AUTH_TOKEN=astrogroot-token

# Optional: Redis (for task queues)
REDIS_URL=redis://localhost:6379

# Data Sources
NASA_API_KEY=DEMO_KEY
# Get your key at: https://api.nasa.gov/

# YouTube Data API v3 (required for video collection)
# Get your key at: https://console.cloud.google.com/ → APIs & Services → YouTube Data API v3
YOUTUBE_API_KEY=your-youtube-api-key

# Server Configuration
PORT=8000
ENVIRONMENT=development

# Background Worker Settings
CRAWLER_INTERVAL_HOURS=24
MAX_ITEMS_PER_SOURCE=50
# Lower to 10–20 if arXiv returns "Internal Server Error" (rate limiting)

# MCP Server Settings
MCP_SERVER_NAME=astrogroot-library
MCP_SERVER_VERSION=1.0.0
